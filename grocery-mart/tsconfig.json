{
  "compilerOptions": {
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "server.js",
    "backend/**/*",
    "frontend/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
